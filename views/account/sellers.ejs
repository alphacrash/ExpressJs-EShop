<% include ../partials/header.ejs %>

<div class="container mt-4">
    <div class="row">
        <div class="col order-md-2 mb-4">
            <h4 class="d-flex justify-content-between align-items-center mb-3">
                <span class="badge badge-primary badge-pill">Sellers</span>
                <span class="badge badge-secondary badge-pill">Products</span>
            </h4>
            <ul class="list-group mb-3">
                <% products.forEach((product) => { %>
                <li class="list-group-item d-flex justify-content-between lh-condensed">
                    <div>
                        <h6 class="my-0"><%= product.author.username %></h6>
                        <small class="text-muted">ID <%= product.author.id %></small>
                    </div>
                    <span class="text-muted"><%= product.title %></span>
                </li>
                <% }) %>
            </ul>
        </div>
    </div>
</div>
<% include ../partials/footer.ejs %>