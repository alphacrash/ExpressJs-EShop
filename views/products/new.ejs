<% include ../partials/header.ejs %>

<div class="container">
    <h1 class="mt-4 mb-4">Add New Product</h1>
    <form class="ml-4" action="/products" method="POST">
        <div class="form-group">
            <label>Title</label>
            <input class="form-control" type="text" name="title" placeholder="Enter title">
        </div>
        <div class="form-group">
            <label>Image</label>
            <input class="form-control" type="text" name="image" placeholder="Enter image address">
        </div>
        <div class="form-group">
            <label>Price</label>
            <input class="form-control" type="text" name="price" placeholder="Enter price address">
        </div>
        <div class="form-group">
            <label>Content</label>
            <textarea class="form-control" name="content" placeholder="Enter content here"></textarea>
        </div>
        <input type="submit" class="btn btn-primary">
    </form>
</div>

