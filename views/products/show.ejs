<% include ../partials/header.ejs %>


<div class="container bg-light">
    <div class="thumbnail">
        <img class="img-responsive m-4" id="detail_img" src="<%= product.image %>">
        <div class="caption-full m-4">
            <h3><%= product.title %></h3>
            <p class="float-right">
                <small class="text-muted">Added <%= product.created.toDateString() %></small>
            </p>
            <p>
                <em>Submitted By <%= product.author.username %></em>
            </p>
            <p>
                <%- product.content %>
            </p>
            <% if(currentUser && product.author.id.equals(currentUser._id)) { %> 
                <a class="btn btn-warning" href="/products/<%= product._id %>/edit">Edit</a> 
                <form id="delete-form" action="/products/<%= product._id %>?_method=DELETE" method="POST"> 
                    <button class="btn btn-danger">Delete</button> 
                </form> 
            <% } %> 
        </div>
    </div>
    <div  class="pb-4"></div>
</div>

<div class="container bg-light">
    <div class="m-4">
            <a href="/products/<%= product._id %>/comments/new" class="btn btn-success float-right mt-4">Add Review</a>
            <h3 class="mt-4 mb-4 pt-4">Reviews</h3>
            <% product.comments.forEach(function(comment) { %> 
                <p> 
                    <strong><%= comment.author.username %></strong> - <%= comment.text %> 
                </p> 
                <% if(currentUser && comment.author.id.equals(currentUser._id)) { %> 
                    <a class="btn btn-warning" href="/products/<%= product._id %>/comments/<%= comment._id %>/edit">Edit</a> 
                    <form id="delete-form" action="/products/<%= product._id %>/comments/<%= comment._id %>?_method=DELETE" method="POST"> 
                        <button class="btn btn-danger">Delete</button> 
                    </form> 
                <% } %> 
            <% }) %> 
            <div  class="pb-4"></div>
    </div>
</div>

<% include ../partials/footer.ejs %>